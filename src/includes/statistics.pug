section.statistics.container
  h2.title.visually-hidden #{statistics.title}
  ul.statistics__list.row.flex-column.flex-sm-row.justify-content-between
    each item in statistics.list
      li.statistics__item.col.col-sm-5.d-flex
        .row.container-fluid.d-flex.justify-content-between.align-items-center
          .col.d-flex.flex-column
            h3.statistics__item-title !{item.title}
            span.statistics__item-number.order-first #{item.number}
          .col-4.d-flex.justify-content-center
            svg.statistics__item-icon(viewBox=item.icon.viewbox width=item.icon.width height=item.icon.height)
              use(xlink:href=`#${item.icon.id}`)
