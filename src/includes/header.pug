header.header
  h2.title.header__title.visually-hidden #{header.title}
  .header__container.container
    .row
      .col
        button.hamburger.hamburger--collapse(type="button" aria-label="Закрыть навигацию по сайту")
          span.hamburger-box
            span.hamburger-inner
    nav.header__nav
      ul.header__nav-list.flex-column.justify-content-center
        each link in header.nav
          li.header__nav-item.col
            a.header__nav-link(href="#{link.href}") #{link.text}
